# BEV Flow Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# LOCAL DEVELOPMENT (SQLite)
# ===========================================
# No database config needed for local - uses SQLite by default
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=bev_flow

# ===========================================
# PRODUCTION (Supabase + Vercel)
# ===========================================
# Supabase Configuration (get from Supabase Dashboard > Settings > API)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# Database Connection String (get from Supabase Dashboard > Settings > Database)
DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-region.pooler.supabase.com:6543/postgres

# ===========================================
# APP SETTINGS
# ===========================================
NODE_ENV=development

# Session password (minimum 32 characters) - REQUIRED for production
NUXT_SESSION_PASSWORD=your-super-secret-session-password-at-least-32-characters-long

# App URL (for production)
NUXT_PUBLIC_APP_URL=https://your-app.vercel.app